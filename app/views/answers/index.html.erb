<h1>Listing answers</h1>

<table>
  <tr>
    <th>Positive rate</th>
    <th>Negative rate</th>
    <th>Teacher approval</th>
    <th>User </th>
    <th>Question</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.positive_rate %></td>
    <td><%= answer.negative_rate %></td>
    <td><%= answer.teacher_approval %></td>
    <td><%= answer.user__id %></td>
    <td><%= answer.question_id %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

